{
	"name": "@hexadrop/talwind-radix-colors",
	"version": "0.0.0",
	"description": "Bring Radix UI's color system to Tailwind CSS.",
	"keywords": [
		"tailwindcss",
		"plugin",
		"radix",
		"color",
		"palette",
		"ui",
		"design"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/hexadrop/tailwind-radix-colors.git"
	},
	"homepage": "https://tailwind-radix-colors.mariomh.com",
	"bugs": "https://github.com/hexadrop/tailwind-radix-colors/issues",
	"license": "MIT",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			},
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"docs:build": "vitepress build docs",
		"docs:dev": "vitepress dev docs",
		"docs:preview": "vitepress preview docs",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prepublishOnly": "tsup",
		"test": "bun test",
		"typecheck": "tsc --noEmit"
	},
	"peerDependencies": {
		"tailwindcss": ">=3.0.0"
	},
	"dependencies": {
		"@radix-ui/colors": "^3.0.0"
	},
	"devDependencies": {
		"@hexadrop/eslint-config": "0.0.1-beta.20",
		"@hexadrop/tsconfig": "0.0.5",
		"@types/bun": "1.1.14",
		"eslint": "9.14.0",
		"postcss": "8.4.47",
		"prettier": "3.4.1",
		"tsup": "8.3.5",
		"typescript": "5.7.2",
		"vitepress": "1.5.0"
	}
}
